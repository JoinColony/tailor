{
    "name": "@colony/lighthouse",
    "version": "1.0.0",
    "description": "Lighthouse",
    "main": "lib/index.js",
    "files": [
        "lib/index.js",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JoinColony/lighthouse.git"
    },
    "scripts": {
        "build": "yarn run clean && yarn run build:dist && yarn run build:lib && yarn run build:flow",
        "build:dist": "webpack",
        "build:flow": "flow-copy-source src lib --ignore '__tests__/*.js'",
        "build:lib": "babel src --out-dir lib --ignore __tests__ --source-maps",
        "clean": "rimraf {lib,dist}",
        "flow": "flow check",
        "lint": "run(){ eslint --ignore-pattern=**/{node_modules,dist,lib}/* --fix ${@:-\"src/{,**/}*.js\"}; }; run",
        "precommit": "lint-staged",
        "test": "yarn run lint && yarn run test:unit",
        "test:unit": "jest --coverage --config=jest.conf.json"
    },
    "lint-staged": {
        "src/{,**/}*.js": [
            "lint --fix",
            "git add"
        ]
    },
    "contributors": [
        "Christian Maniewski <chris@colony.io>",
        "Griffin Hotchkiss <griffin@colony.io>",
        "James Lefrère <james@colony.io>",
        "Jan Kaßel <jan@colony.io>",
        "Raul Glogovetan <raul@colony.io>",
        "Scott Street <scott@colony.io>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/JoinColony/lighthouse/issues"
    },
    "devDependencies": {
        "@colony/eslint-config-colony": "^5.0.0",
        "babel-eslint": "^8.2.5",
        "babel-loader": "^7.1.5",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-flow": "^6.23.0",
        "eslint": "^5.1.0",
        "eslint-config-airbnb-base": "^13.0.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-flowtype": "^2.50.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-prettier": "^2.6.2",
        "flow-bin": "^0.76.0",
        "flow-copy-source": "^2.0.1",
        "jest": "^23.4.0",
        "jest-fetch-mock": "^1.6.5",
        "jest-sandbox": "^1.1.2",
        "prettier": "^1.13.7",
        "rimraf": "2.6.2",
        "webpack": "^4.16.0",
        "webpack-cli": "^3.0.8"
    },
    "homepage": "https://github.com/JoinColony/lighthouse#readme",
    "engines": {
        "node": ">=8.6.0",
        "yarn": ">=1.3.2"
    },
    "dependencies": {
        "assert": "^1.4.1",
        "isomorphic-fetch": "^2.2.1",
        "web3-utils": "^1.0.0-beta.34"
    }
}
